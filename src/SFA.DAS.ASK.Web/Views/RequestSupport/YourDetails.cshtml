@model SFA.DAS.ASK.Web.ViewModels.RequestSupport.YourDetailsViewModel

@{
    ViewBag.Title = "TODO: TITLE YOUR DETAILS";
}

<a class="govuk-back-link" asp-action="Index" asp-controller="RequestSupport">Back</a>

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <partial name="_ErrorSummary" />

            <h1 class="govuk-heading-xl">
                Your details
                <span class="govuk-caption-xl">Section 1 of 4</span>
            </h1>

            <form method="post">
                <div class="govuk-form-group">

                    <div class="govuk-form-group" sfa-gds-error-class-for="FirstName">
                        <span sfa-gds-error-message-for="FirstName"></span>
                        <label class="govuk-label" asp-for="FirstName">First name</label>
                        <input class="govuk-input" type="text" asp-for="FirstName" />
                    </div>

                    <div class="govuk-form-group" sfa-gds-error-class-for="LastName">
                        <span sfa-gds-error-message-for="LastName"></span>
                        <label class="govuk-label" asp-for="LastName">Last name</label>
                        <input class="govuk-input" type="text" asp-for="LastName" />
                    </div>

                    <div class="govuk-form-group" sfa-gds-error-class-for="JobRole">
                        <span sfa-gds-error-message-for="JobRole"></span>
                        <label class="govuk-label" asp-for="JobRole">Your job role</label>
                        <input class="govuk-input" type="text" asp-for="JobRole" />
                    </div>


                    <div class="govuk-form-group" sfa-gds-error-class-for="PhoneNumber">
                        <span sfa-gds-error-message-for="PhoneNumber"></span>
                        <label class="govuk-label" asp-for="PhoneNumber">Phone number</label>
                        <input class="govuk-input" type="text" asp-for="PhoneNumber" />
                    </div>

                    <div class="govuk-form-group" sfa-gds-error-class-for="Email">
                        <span sfa-gds-error-message-for="Email"></span>
                        <label class="govuk-label" asp-for="Email">Email address</label>
                        <input class="govuk-input" type="text" asp-for="Email" />
                    </div>


                    <div class="govuk-form-group" sfa-gds-error-class-for="ConfirmEmail">
                        <span sfa-gds-error-message-for="ConfirmEmail"></span>
                        <label class="govuk-label" asp-for="ConfirmEmail">Confirm email address</label>
                        <input class="govuk-input" type="text" asp-for="ConfirmEmail" />
                    </div>

                </div>

                <button id="continueButton" class="govuk-button" type="submit">Continue</button>
                <a id="cancelLink" class="govuk-link das-link--button-aligned" asp-controller="Home" asp-action="Index">Cancel</a>
            </form>

            <p>
                If you experience any difficulties in completing the form, please call for assistance on <a href="#">01462 341191</a>.
            </p>

        </div>
    </div>
</main>


