@using Microsoft.AspNetCore.Mvc.ModelBinding
@model SFA.DAS.ASK.Web.ViewModels.RequestSupport.HasSignInViewModel

@{
    ViewBag.Title = "Request support";
}
<a asp-action="Index" asp-controller="Home" class="govuk-back-link">Back</a>
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <partial name="_ErrorSummary"/>

            <form method="post">
                <div class="govuk-form-group" sfa-gds-error-class-for="HasSignInAccount">
                    <fieldset class="govuk-fieldset" aria-describedby="has-sign-in-error">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

                            <h1 class="govuk-fieldset__heading">
                                Do you have a DfE Sign-in account?
                            </h1>

                        </legend>


                        <span id="has-sign-in-error" sfa-gds-error-message-for="HasSignInAccount"></span>

                        <div class="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" type="radio" asp-for="HasSignInAccount" id="HasSignInAccount" value="true">
                                <label class="govuk-label govuk-radios__label" for="HasSignInAccount">
                                    Yes
                                </label>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" type="radio" asp-for="HasSignInAccount" id="hasSignInAccount_No" value="false">
                                <label class="govuk-label govuk-radios__label" for="hasSignInAccount_No">
                                    No
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button id="continueButton" class="govuk-button" data-module="govuk-button" type="submit">
                    Continue
                </button>
                <a id="cancelLink" asp-action="Index" asp-controller="Home" class="das-button--link">Cancel</a>
            </form>
            <partial name="_DifficultiesFooter"/>
        </div>
    </div>
</main>