@using Microsoft.AspNetCore.Mvc.ModelBinding
@model SFA.DAS.ASK.Web.ViewModels.RequestSupport.RequestSupportViewModel

@{
    ViewBag.Title = "TODO: Title - Request Support";
}
<a asp-action="Index" asp-controller="Home" class="govuk-back-link">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Request support
            <span class="govuk-caption-xl">Teachers and careers advisers</span>
        </h1>
    </div>
</div>

@Html.Partial("_ErrorSummary")

<form method="post">
    <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                Do you have access to a DfE Sign-in account?
            </legend>

            <div class="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" type="radio" asp-for="HasSignInAccount" id="HasSignInAccount" value="true">
                    <label class="govuk-label govuk-radios__label" for="HasSignInAccount">
                        Yes
                    </label>
                </div>

                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" type="radio" asp-for="HasSignInAccount" id="hasSignInAccount_No" value="false">
                    <label class="govuk-label govuk-radios__label" for="hasSignInAccount_No">
                        No
                    </label>
                </div>
            </div>
        </fieldset>
    </div>
    <button class="govuk-button" data-module="govuk-button" type="submit">
      Next
    </button>
</form>
<p class="govuk-hint">If you experience any difficulties in completing the form, please call for assistance on <a href="tel:01462 341191">01462 341191</a>.</p>