@model SFA.DAS.ASK.Web.ViewModels.RequestSupport.ApplicationCompleteViewModel

@{
    ViewBag.Title = "Application complete";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Thank you @Model.Email
            <span class="govuk-caption-xl">Request support</span>
        </h1>
        
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Application complete
            </h1>
          
            <div class="govuk-panel__body">
                We have sent you a confirmation email
            </div>
        </div>
        <p></p>
        <h2 class="govuk-heading-m">What happens next</h2>
        
        <p class="govuk-body">
            <a href="#" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
        </p>
    </div>
</div>