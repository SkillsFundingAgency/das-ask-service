@model SFA.DAS.ASK.Web.ViewModels.RequestSupport.OrganisationSearchViewModel

@{
    ViewBag.Title = "Organisation search";
}

<a class="govuk-back-link" asp-action="Index" asp-controller="OrganisationType" asp-route-requestId="@Model.RequestId">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <partial name="_ErrorSummary" />

            <h1 class="govuk-heading-xl">
                Search for @Model.OrganisationType
            </h1>

            <form method="post" asp-action="Search" asp-controller="OrganisationSearch" asp-route-requestId="@Model.RequestId">


                <div class="govuk-form-group" sfa-gds-error-class-for="Search">
                    <label class="govuk-label" for="Search">Search term</label>
                    <span id="organisation-search-error" sfa-gds-error-message-for="Search"></span>
                    <input class="govuk-input" asp-for="Search" type="text" aria-describedby="organisation-search-error">
                </div>

                <button class="govuk-button" data-module="govuk-button" type="submit">
                    Search
                </button>

                <a asp-action="Index" asp-controller="CancelSupportRequest" asp-route-requestId="@Model.RequestId" asp-route-returnAction="Index" asp-route-returnController="OrganisationSearch" class="das-button--link">Cancel</a>

            </form>
            <partial name="_DifficultiesFooter" />
        </div>
    </div>
</main>