@model Guid

@{
    ViewBag.Title = "Feedback";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Give feedback about your ASK visit</h1>
            <p class="govuk-body">You recently received apprenticeship support through the ASK programme, and we’d like to hear what you thought of it. Your feedback will help our ASK delivery partners to prepare and deliver future activities.</p>
            <p class="govuk-body">You’ll need to:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>confirm the details of the visit</li>
                <li>rate the service you received</li>
                <li>suggest any changes that could be made to future activities</li>
            </ul>
            <p class="govuk-body">This survey takes around <strong>5 minutes.</strong></p>
            <a id="startButton" asp-action="Index" asp-controller="FeedbackConfirmDetails" asp-route-feedbackId="@Model" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                Start now
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                </svg>
            </a>
        </div>
    </div>
</main>
